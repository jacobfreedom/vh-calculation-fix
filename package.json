{
  "name": "vh-calculation-fix",
  "version": "1.0.5",
  "description": "Reliable viewport height CSS variables for in-app browsers and mobile WebViews.",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --dts --format esm,cjs --target es2018",
    "dev": "tsup src/index.ts --watch --dts --format esm,cjs --target es2018",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "test": "npm run build && vitest run"
  },
  "keywords": [
    "vh",
    "viewport",
    "css-variables",
    "visualViewport",
    "in-app-browser",
    "mobile",
    "ios",
    "android"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jacobfreedom/vh-calculation-fix.git"
  },
  "bugs": {
    "url": "https://github.com/jacobfreedom/vh-calculation-fix/issues"
  },
  "homepage": "https://github.com/jacobfreedom/vh-calculation-fix#readme",
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {},
  "devDependencies": {
    "tsup": "^8.0.0",
    "typescript": "^5.6.0",
    "vitest": "^1.6.0",
    "eslint": "^9.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0"
  }
}
